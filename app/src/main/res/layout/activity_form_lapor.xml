<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".FormLaporActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <View
                android:id="@+id/btn_back"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="34dp"
                android:layout_height="33dp"
                android:background="@drawable/ic_icon_back"
                android:foreground="@drawable/fg_circle"
                android:clickable="true"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengaduan"
                android:textSize="24dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:textColor="@color/colorBlack"/>
        </FrameLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">
    <LinearLayout
        android:paddingHorizontal="33dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi"
            android:textSize="16dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:textColor="@color/colorGrey"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">
            <EditText
                android:id="@+id/edMaps"
                android:hint=""
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textColor="@android:color/black"
                android:layout_gravity="bottom"
                android:background="@color/colorWhite"/>
            <ImageButton
                android:id="@+id/ibMaps"
                android:layout_weight="1"
                android:background="@drawable/ic_place_black_24dp"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:foreground="@drawable/fg_circle"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>
        <TextView
            android:id="@+id/lt"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="25dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Pengaduan"
            android:textSize="16dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:textColor="@color/colorGrey"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="45dp">
        </Spinner>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>
        <TextView
            android:layout_marginTop="25dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keterangan"
            android:textSize="16dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:textColor="@color/colorGrey"/>
        <EditText
            android:id="@+id/ket"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:hint="Mulai tulis di sini . . ."
            android:textColorHint="@color/colorBlack"
            android:background="@color/colorTransparant"/>
        <TextView
            android:id="@+id/coba"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ambil Gambar"
            android:textSize="16dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:textColor="@color/colorBlack"/>
        <LinearLayout
            android:id="@+id/button1"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_rectangle_dash">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <View
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_photo_camera_black_24dp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambahkan Foto"
                    android:textSize="16dp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:textColor="@color/colorGrey"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button2"
            android:clickable="true"
            android:visibility="gone"
            android:layout_marginTop="-60dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_rectangle_dash">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <View
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_photo_camera_black_24dp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambahkan Foto"
                    android:textSize="16dp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:textColor="@color/colorGrey"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button3"
            android:clickable="true"
            android:visibility="gone"
            android:layout_marginTop="-60dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_rectangle_dash">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <View
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_photo_camera_black_24dp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambahkan Foto"
                    android:textSize="16dp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:textColor="@color/colorGrey"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button4"
            android:clickable="true"
            android:visibility="gone"
            android:layout_marginTop="-60dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_rectangle_dash">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <View
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_photo_camera_black_24dp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambahkan Foto"
                    android:textSize="16dp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:textColor="@color/colorGrey"/>
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/imageView3"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>



    </ScrollView>
    <LinearLayout
        android:paddingHorizontal="33dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_lapor"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:textColor="@color/colorWhite"
            android:text="Laporkan"
            android:textSize="18dp"
            android:clickable="true"
            android:fontFamily="@font/source_sans_pro_bold"
            android:background="@drawable/bg_rectangle_solid"
            android:foreground="@drawable/fg_button_round"/>
    </LinearLayout>
</LinearLayout>