<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".OtpVerifikasiActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingHorizontal="22dp"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:textColor="@android:color/black"
            android:text="Verifikasi"
            android:fontFamily="@font/source_sans_pro_bold"
            android:textSize="24dp"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:textColor="@color/colorGrey"
            android:text="Masukkan kode verifikasi yang di kirim ke nomer"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="+"/>
            <TextView
            android:id="@+id/nomortlp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="Nomor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="32dp"
            android:id="@+id/ubah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_icon_pencil"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:paddingLeft="14dp"
                android:text="Ubah No.HP"
                android:paddingRight="14dp"
                android:textColor="@color/colorGrey"/>

        </LinearLayout>




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal">
        <com.mukesh.OtpView
            android:textSize="20sp"
            android:textColor="#a6a8ae"
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            app:itemCount="6"
            app:lineColor="#e6e6e6"
            app:viewType="line"
            app:cursorColor="@color/colorPrimaryDark"/>
</LinearLayout>



